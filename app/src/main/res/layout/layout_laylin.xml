<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <ImageView
        android:id="@+id/lay_image"
        android:visibility="visible"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_width="100dp"
        android:layout_height="100dp"/>
    <TextView
        android:id="@+id/lay_title"
        android:textSize="15dp"
        android:textColor="#000000"
        app:layout_constraintTop_toTopOf="@id/lay_image"
        app:layout_constraintLeft_toRightOf="@id/lay_image"
        android:layout_marginTop="15dp"
        android:paddingLeft="10dp"
        android:layout_width="250dp"
        android:layout_height="wrap_content"/>
    <TextView
        android:id="@+id/lay_name"
        android:textSize="13dp"
        android:textColor="#C3C3C3"
        android:text="55555"
        app:layout_constraintTop_toBottomOf="@id/lay_title"
        app:layout_constraintLeft_toRightOf="@id/lay_image"
        android:layout_marginTop="10dp"
        android:paddingLeft="10dp"
        android:layout_width="250dp"
        android:layout_height="wrap_content"/>
    <TextView
        android:id="@+id/lay_jin"
        android:textSize="13dp"
        android:textColor="#FF0000"
        android:text="555555"
        app:layout_constraintTop_toBottomOf="@id/lay_name"
        app:layout_constraintLeft_toRightOf="@id/lay_image"
        android:layout_marginTop="10dp"
        android:paddingLeft="10dp"
        android:layout_width="250dp"
        android:layout_height="wrap_content"/>

</androidx.constraintlayout.widget.ConstraintLayout>