<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/constraint"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <TextView
        android:id="@+id/itemm_title"
        android:textSize="15dp"
        android:textColor="#000000"
        android:paddingLeft="10dp"
        app:layout_constraintLeft_toLeftOf="@id/itemm_image"
        app:layout_constraintTop_toBottomOf="@id/itemm_image"
        android:layout_width="250dp"
        android:layout_height="wrap_content"/>
    <TextView
        android:id="@+id/itemm_jin"
        android:textSize="15dp"
        android:textColor="#FF0000"
        android:paddingLeft="10dp"
        app:layout_constraintLeft_toRightOf="@id/itemm_title"
        app:layout_constraintTop_toBottomOf="@id/itemm_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <TextView
        android:id="@+id/itemm_name"
        android:textSize="13dp"
        android:textColor="#A5A5A5"
        android:paddingLeft="10dp"
        app:layout_constraintLeft_toLeftOf="@id/itemm_image"
        app:layout_constraintTop_toBottomOf="@id/itemm_title"
        android:layout_width="350dp"
        android:layout_height="wrap_content"/>
    <ImageView
        android:id="@+id/itemm_image"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_margin="5dp"
        android:layout_width="350dp"
        android:layout_height="200dp"/>
</androidx.constraintlayout.widget.ConstraintLayout>